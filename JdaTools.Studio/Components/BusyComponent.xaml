<UserControl x:Class="JdaTools.Studio.Components.BusyComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JdaTools.Studio.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle x:Name="BusyLogo"
                   Width="50" Height="50">
            <Rectangle.Fill>
                <SolidColorBrush Color="{StaticResource MahApps.Colors.AccentBase}"/>
            </Rectangle.Fill>
            <Rectangle.OpacityMask>
                <ImageBrush ImageSource="../Assets/MS_logo_only_3000xx.png"/>
            </Rectangle.OpacityMask>
        </Rectangle>
    </Grid>
</UserControl>
